<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_253502_Melikava.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_253502_Melikava.UI"
    xmlns:pages="clr-namespace:_253502_Melikava.UI.Pages">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent 
        Title="Menu positions list"
        ContentTemplate="{DataTemplate pages:MenuPositionsPage}"
        Route="MenuPositionsPage">
        <ShellContent.FlyoutIcon>
            <FontImageSource Glyph="&#xf30c;"
                             FontFamily="{OnPlatform iOS=FontAwesome, Android=fontawesome-webfont.ttf#}"
                             Size="44"
                             Color="Black"/>
        </ShellContent.FlyoutIcon>

    </ShellContent>
        
</Shell>
