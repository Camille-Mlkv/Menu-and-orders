<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_253502_Melikava.UI.Pages.OrderDetails"
             Title="OrderDetails">

    <StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label Text="Client name: " FontAttributes="Bold"/>
            <Label Text="{Binding Order.ClientName}" />
        </StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label Text="Preparation time (min): " FontAttributes="Bold"/>
            <Label Text="{Binding Order.PreparationTime}" />
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label Text="Birthday gift: " FontAttributes="Bold"/>
            <Label Text="{Binding Order.BirthdayGift}" />
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label Text="Sauce: " FontAttributes="Bold"/>
            <Label Text="{Binding Order.Sauce}" />
        </StackLayout>


    </StackLayout>
</ContentPage>